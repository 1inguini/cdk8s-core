{
  "name": "kubesynth",
  "version": "0.1.0",
  "description": "Programmatically define Kubernetes manifests using familiar programming languages",
  "scripts": {
    "build": "./generate.sh && tsc",
    "watch": "tsc -w",
    "package": "jsii-pacmak",
    "test": "jest"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "jsii": {
    "outdir": "dist",
    "targets": {
      "java": {
        "package": "com.github.eladb.k8scdk",
        "maven": {
          "groupId": "com.github.eladb",
          "artifactId": "k8scdk"
        }
      },
      "python": {
        "distName": "k8scdk",
        "module": "k8scdk"
      }
    }
  },
  "author": {
    "email": "elad.benisrael@gmail.com",
    "name": "Elad Ben-Israel",
    "url": "https://github.com/eladb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eladb/k8scdk"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "13.7.0",
    "@types/yaml": "^1.2.0",
    "jest": "^25.1.0",
    "jsii": "^0.22.0",
    "jsii-pacmak": "^0.22.0",
    "json-schema-to-typescript": "^8.0.1",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ]
  },
  "bundledDependencies": [
    "yaml"
  ],
  "dependencies": {
    "@aws-cdk/core": "^1.23.0",
    "@aws-cdk/cx-api": "^1.23.0",
    "yaml": "^1.7.2"
  },
  "peerDependencies": {
    "@aws-cdk/core": "^1.23.0"
  }
}
