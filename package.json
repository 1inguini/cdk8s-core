{
  "name": "k8scdk",
  "version": "0.1.0",
  "description": "Kubernetes Cloud Development Kit (CDK)",
  "scripts": {
    "build": "./generate.sh && tsc",
    "watch": "tsc -w",
    "package": "jsii-pacmak",
    "test": "jest"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "jsii": {
    "outdir": "dist",
    "targets": {
      "java": {
        "package": "com.github.eladb.k8scdk",
        "maven": {
          "groupId": "com.github.eladb",
          "artifactId": "k8scdk"
        }
      },
      "python": {
        "distName": "k8scdk",
        "module": "k8scdk"
      }
    }
  },
  "author": {
    "email": "elad.benisrael@gmail.com",
    "name": "Elad Ben-Israel",
    "url": "https://github.com/eladb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eladb/k8scdk"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "12.6.2",
    "jest": "^24.8.0",
    "jsii": "^0.14.0",
    "jsii-pacmak": "^0.14.0",
    "json-schema-to-typescript": "^6.1.3",
    "typescript": "^3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ]
  },
  "bundledDependencies": [
    "yaml"
  ],
  "dependencies": {
    "@aws-cdk/core": "^1.0.0",
    "yaml": "^1.6.0"
  },
  "peerDependencies": {
    "@aws-cdk/core": "^1.0.0"
  }
}
